@model scform.Models.Users
@{
    ViewBag.Title = "Index";
}

<h2>Form</h2>
<html>
<head>
    <meta name="viewport" content=" width=device=width" />
    <title>Form</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.0.slim.min.js"></script>
  
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div>
        @using (Html.BeginForm())
        {
            @Html.LabelFor(model => model.UserType)
            @Html.DropDownListFor(model => model.UserType, new SelectList(ViewBag.UserTypeList, "value", "Text"), "select user type", new { @class = "from-control", id = "userTypeDropDown" })
            <br />

            <div id="userFields">
                @Html.LabelFor(model => model.UserName)
                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })
                <br />
                @Html.LabelFor(model => model.UserEmail)
                @Html.TextBoxFor(model => model.UserEmail, new { @class = "form-control" })
                <br />
                @Html.LabelFor(model => model.UserDateOfBirth)
                @Html.TextBoxFor(model => model.UserDateOfBirth, new { @class = "form-control" })
                <br />
                @Html.LabelFor(model => model.UserFile)
                @Html.TextBoxFor(model => model.UserFile, new { type = "file", @class = "form-control" })
                <br />
            </div>
            <div>
                <div id="adminFields" style="display:none">
                    @Html.LabelFor(model => model.AdminName)
                    @Html.TextBoxFor(model => model.AdminName, new { @class = "form-control" })
                    <br />

                    @Html.LabelFor(model => model.AdminEmail)
                    @Html.TextBoxFor(model => model.AdminEmail, new { @class = "form-control" })
                    <br />

                    @Html.LabelFor(model => model.AdminDateOfBirt)
                    @Html.TextBoxFor(model => model.AdminDateOfBirt, new { @class = "form-control" })
                    <br />

                    @Html.LabelFor(model => model.AdminFile)
                    @Html.TextBoxFor(model => model.AdminFile, new { type = "file", @class = "form-control" })
                    <br />
                </div>
                <div>
                    <button type="submit" class="btn btn-outline-info">SUBMIT</button>
                </div>
            </div>

        }
    </div>
    <script>
        $(document).ready(function () {
            $('#userTypeDropDown').change(function () {
                var UserType = $(this).val();

                if (UserType == 'Admin') {
                    $('#adminFields').show();
                    $('#userFields').hide();
                }
                else if (UserType == 'User') {
                    $('#adminFields'.hide());
                    $('#userFields'.show());
                }
                else {
                    $('#adminFields'.hide());
                    $('#userFields'.hide());
                }
            });
        });
    </script>
</body>
</html>


